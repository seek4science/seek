/* first or middle sibling, no children */
.ygtvtn { background: url("<%= asset_path('yui/treeview/folders/tn2.gif') %>") 0 0 no-repeat; width:34px; height:22px; }


/* first or middle sibling, collapsable */
.ygtvtm { background: url("<%= asset_path('yui/treeview/folders/tm.gif') %>") 0 0 no-repeat; width:34px; height:22px; cursor:pointer }

/* first or middle sibling, collapsable, hover */
.ygtvtmh { background: url("<%= asset_path('yui/treeview/folders/tmh.gif') %>") 0 0 no-repeat; width:34px; height:22px; cursor:pointer }

/* first or middle sibling, expandable */
.ygtvtp { background: url("<%= asset_path('yui/treeview/folders/tp.gif') %>") 0 0 no-repeat; width:34px; height:22px; cursor:pointer }

/* first or middle sibling, expandable, hover */
.ygtvtph { background: url("<%= asset_path('yui/treeview/folders/tph.gif') %>") 0 0 no-repeat; width:34px; height:22px; cursor:pointer }

/* last sibling, no children */
.ygtvln { background: url("<%= asset_path('yui/treeview/folders/ln2.gif') %>") 0 0 no-repeat; width:34px; height:22px; }


/* Last sibling, collapsable */
.ygtvlm { background: url("<%= asset_path('yui/treeview/folders/lm.gif') %>") 0 0 no-repeat; width:34px; height:22px; cursor:pointer }

/* Last sibling, collapsable, hover */
.ygtvlmh { background: url("<%= asset_path('yui/treeview/folders/lmh.gif') %>") 0 0 no-repeat; width:34px; height:22px; cursor:pointer }

/* Last sibling, expandable */
.ygtvlp { background: url("<%= asset_path('yui/treeview/folders/lp.gif') %>") 0 0 no-repeat; width:34px; height:22px; cursor:pointer }

/* Last sibling, expandable, hover */
.ygtvlph { background: url("<%= asset_path('yui/treeview/folders/lph.gif') %>") 0 0 no-repeat; width:34px; height:22px; cursor:pointer }

/* Loading icon */
.ygtvloading { background: url("<%= asset_path('yui/treeview/folders/loading.gif') %>") 0 0 no-repeat; width:16px; height:22px; }

/* the style for the empty cells that are used for rendering the depth 
 * of the node */
.ygtvdepthcell { background: url("<%= asset_path('yui/treeview/folders/vline.gif') %>") 0 0 no-repeat; width:17px; height:22px; }

.ygtvblankdepthcell { width:17px; height:22px; }

/* the style of the div around each node */
.ygtvitem { }  

.ygtvitem  table{
    margin-bottom:0;
}
.ygtvitem  td {
    border:none;padding:0;
} 



/* the style of the div around each node's collection of children */
.ygtvchildren { }  
* html .ygtvchildren { height:1%; }  

/* the style of the text label in ygTextNode */
.ygtvlabel, .ygtvlabel:link, .ygtvlabel:visited, .ygtvlabel:hover { 
	margin-left:2px;
	text-decoration: none;
}


