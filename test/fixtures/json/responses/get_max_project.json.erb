      "project_administrators": {
        "data": []
      },
      "asset_housekeepers": {
        "data": []
      },
      "asset_gatekeepers": {
        "data": []
      },
      "people": {
        "data":
        <%= res.people.map { |p| { id: p.id.to_s, type: 'people' } }.to_json %>
      },
      "institutions": {
        "data":
        <%= res.institutions.map { |i| { id: i.id.to_s, type: 'institutions' } }.to_json %>
      },
      "programmes": {
        "data": [
          {
            "id": "<%= res.programme_id %>",
            "type": "programmes"
          }
        ]
      },
      "investigations": {
        "data": [
          {
            "id": "<%= res.investigation_ids.first %>",
            "type": "investigations"
          }
        ]
      },
