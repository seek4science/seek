{
  "data": {
    "id": "<%= res.id %>",
    "type": "projects",
    "attributes": {
      "avatar": "/projects/<%= res.id %>/avatars/<%= res.avatar_id %>",
      "title": "A Maximal Project",
      "description": "A Taverna project",
      "web_page": "http://www.taverna.org.uk",
      "wiki_page": "http://www.mygrid.org.uk",
      "default_license": "Other (Open)",
      "default_policy": {
        "access": "no_access",
        "permissions": []
      },
      "members": <%= res.current_group_memberships.includes(:institution).map { |g| { person_id: g.person_id.to_s, institution_id: g.institution.id.to_s } }.to_json %>,
      "start_date": "2010-01-01",
      "end_date": "2014-06-21",
      "use_default_policy": true,
      "discussion_links": [
        {
          "id":
          "<%= res.discussion_link_ids.first %>",
          "url": "http://www.slack.com/",
          "label": "Slack"
        }
      ],
      "topic_annotations": [
        {
          "label": "Biomedical science",
          "identifier": "http://edamontology.org/topic_3344"
        },
        {
          "label": "Chemistry",
          "identifier": "http://edamontology.org/topic_3314"
        }
      ]
    },
