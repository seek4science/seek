{
  "data": {
    "type": "assays",
    "attributes": {
      "title": "A Maximal experimental Assay",
      "assay_class": {
        "key": "EXP"
      },
      "assay_type": {
        "uri": "http://www.mygrid.org.uk/ontology/JERMOntology#Transcriptomics"
      },
      "technology_type": {
        "uri": "http://www.mygrid.org.uk/ontology/JERMOntology#RNA-Seq"
      },
      "tags": ["Assay-tag1", "Assay-tag2", "Assay-tag3"],
      "other_creators": "Anonymous creator",
      "description": "A Western Blot Assay",
      "policy": {
        "access": "download",
        "permissions": [
          {
            "resource": {
              "id" : "<%= project_id %>",
              "type": "projects"
            },
            "access": "manage"
          }
        ]
      }
    },
    "relationships": {
      "study": {
        "data":
        {
          "id": "<%=study_id%>",
          "type": "studies"
        }
      },
      "publications":{
        "data": [
          {
            "id": "<%= Factory(:publication).id %>",
            "type": "publications"
          }
        ]
      },
      "organisms":{
        "data": [
          {
            "id": "<%= Factory(:organism).id %>",
            "type": "organisms"
          }
        ]
      },
      "sops":{
        "data": [
          {
            "id": "<%= Factory(:sop, policy: Factory(:public_policy)).id %>",
            "type": "sops"
          }
        ]
      },
      "models":{
        "data": [
          {
            "id": "<%= Factory(:model, policy: Factory(:public_policy)).id %>",
            "type": "models"
          }
        ]
      },
      "data_files":{
        "data": [
          {
            "id": "<%= Factory(:data_file, policy: Factory(:public_policy)).id %>",
            "type": "data_files"
          }
        ]
      },
      "documents": {
        "data": [
          {
            "id": "<%= Factory(:document, policy: Factory(:public_policy)).id %>",
            "type": "documents"
          }
        ]
      }
      <% unless creator_ids.nil? %>
    ,"creators": {
        "data": [
          <% for creator_id in creator_ids do %>
          <%= r.call("_related.json.erb",{:type => "people",:id => creator_id}) %>
          <% end %>
        ]
      }
      <% end %>
    }
  }
}
