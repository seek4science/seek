{
  "data": {
    "type": "presentations",
    "attributes": {
      "title": "A Maximal Presentation",
      "description": "This is the description",
      "tags": ["tag1", "tag2"],
      "license": "CC-BY-4.0",
      "other_creators": "John Smith, Jane Smith",
      "content_blobs": [
        {
          "original_filename": "a_pdf_file.pdf",
          "content_type": "application/pdf"
        }
      ],
      "policy": {
        "access": "download",
        "permissions": [
          {
            "resource": {
              "id" : "<%= @project.id %>",
              "type": "projects"
            },
            "access": "edit"
          }
        ]
      }
    },
    "relationships": {
      "creators": {
        "data": [
          {
            "id": "<%= @creator.id %>",
            "type": "people"
          }
        ]
      },
      "projects": {
        "data": [
          {
            "id": "<%= @project.id %>",
            "type": "projects"
          }
        ]
      },
      "publications": {
        "data": [
          {
            "id": "<%= @publication.id %>",
            "type": "publications"
          }
        ]
      },
      "events": {
        "data": [
          {
            "id": "<%= @event.id %>",
            "type": "events"
          }
        ]
      }
    }
  }
}
