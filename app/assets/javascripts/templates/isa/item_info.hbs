<div class='isa-selected-item'>
    <div>
        <strong>Selected:</strong>
        {{#if url}}
            <span>
                <a href="{{url}}" data-tooltip="{{{fullName}}}">{{ truncate fullName 120 }}</a> ({{type}})
            </span><br/>
            <strong>Description:</strong>
            <span data-tooltip="{{description}}">{{ truncate description 120 }}</span><br/>
        {{else}}
            <span class="none_text">Hidden item</span>
        {{/if}}
    </div>
</div>
