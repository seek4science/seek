<% environment.context_class.instance_eval { include ImagesHelper,ProjectsHelper } %>

div#admin_members {
    margin-top: 0.5em;
    margin-left: 1em;
}

div#project_institutions {
    width: 90%;
    max-height: 50em;
    overflow: auto;
}


ul.institution_members .institution_label {
    font-size: larger;
    font-weight: bolder;
    display:inline-block;
    margin-bottom: 0.5em;
}

ul.institution_members li.institution_member {
    padding-left: 1em;
    list-style-type: none;
}

.remove_member_icon {
    display: inline-block;
    background: url(<%= asset_path(remove_member_icon_filename) %>) left center no-repeat;
    background-size: 12px;
    vertical-align: middle;
    padding: 6px 6px;
}

div#project_institutions table {
    display:inline;
}

#add_member {
    margin: 2em;
    padding:1em;
    width:22em;
    border: 1px solid #ccc;
    position: absolute;
    right: 1em;
    top: 6em;
}
#add_member select {
    max-width: 20em;
}

#add_member #facebook #ids {
    max-width: 25em;
}

#add_member a.block_link {
    width: 4em;
}

