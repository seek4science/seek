<% environment.context_class.instance_eval { include ImagesHelper } %>

.large_spinner {
    background: url(<%= asset_path(icon_filename_for_key('large_spinner')) %>);
    background-repeat: no-repeat;
    width: 75px; /*or your image's width*/
    height: 75px; /*or your image's height*/
