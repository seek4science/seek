<% @search_query="" unless @search_query %>
<% @search_type="All" unless @search_type %>

<%= icon("feedback",feedback_path,"Feedback",{:id=>"feedback"},"Provide Feedback") %>

<% if logged_in? && current_user.is_admin? -%>
  <%= icon "lock", admin_url, "Admin enabled", {:id=>"adminmode"}, "Admin enabled" -%>
<% end -%>

<% if SOLR_ENABLED && logged_in? && current_user.person %>

  <% form_tag '/search/' do -%>
    <%= text_field_tag :search_query, @search_query %>
    <%= select_tag :search_type, options_for_select(search_type_options,@search_type)  %>
    <%= submit_tag "Go"  %>
  <% end  -%>
<% end %>

