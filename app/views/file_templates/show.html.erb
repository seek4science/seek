<ul class="nav nav-tabs">
  <li class="active ">
    <a data-toggle="tab" href="#details"><i class="glyphicon glyphicon-list-alt"></i> Details</a>
  </li>
  <li>
    <a data-toggle="tab" href="#related-items">
      <i class="glyphicon glyphicon-th-list"></i> Related items
    </a>
  </li>
</ul>
<div class="tab-content">
  <div id="details" class="tab-pane fade in active">
    <%= render :partial => "general/item_title",:locals => {:item => @file_template, :version => @display_file_template.version,
    :buttons_partial => 'assets/asset_buttons'} -%>

    <%= render :partial=>"assets/upload_new_version_form", :locals=>{:resource=>@file_template} -%>

    <div class="row">
      <div class="col-md-9 col-sm-8 box_about_actor">
	<%= item_description @display_file_template.description -%>

	<div class="row">
	  <div class="col-md-6">
            <%= persistent_resource_id(@display_file_template) %>

            <%= render :partial => 'assets/fileinfo',:object=>@display_file_template.content_blob -%>

            <%= render :partial => "assets/special_auth_code_display", :locals => {:resource => @file_template} %>

            <%= render :partial => "assets/asset_doi", :locals => {:displayed_resource=>@display_file_template} %>
	  </div>
	</div>
	<%= render :partial=>"general/isa_graph", :locals => {:root_item => @file_template, :deep => true, :include_parents => true} %>
      </div>

      <div class="col-md-3 col-sm-4">
	<%= render :partial=>"assets/resource_main_content_right",:locals => { :resource => @file_template, :versioned_resource=>@display_file_template } %>
      </div>
    </div>

    <%= render :partial=>"assets/resource_version_details", :locals=>{:displayed_resource=>@display_file_template, :resource=>@file_template} -%>

  </div>
  
  <div id="related-items" class="tab-pane fade">
    <%# get, classify and authorize all assets for this project -%>
    <%= render :partial=>"general/items_related_to",:object => @file_template -%>
  </div>
  
</div>
