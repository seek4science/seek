<%= list_item_description resource.description %>

<div class="row">
  <div class="col-sm-6">
    <%
      # filter out creators that are also the contributor
      maintainers = [resource.contributor] | resource.assets_creators.reject{|creator| creator.person == resource.contributor}
    %>
    <%= list_item_person_list maintainers, resource.other_creators, 'Maintainers' %>
    <%= list_item_attribute('Number of items', resource.items.count) %>
    <%= list_item_doi(resource) %>
    <%= list_item_tag_list(resource) %>
  </div>
</div>
