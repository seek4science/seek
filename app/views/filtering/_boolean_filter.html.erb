<% if options.any? %>
  <div class="filter-category collapsed" data-filter-category="<%= key.to_s -%>">
    <div class="filter-category-title"><%= t(key, default: key.to_s).humanize %></div>
    <% options.each_with_index do |filter, _i| %>
      <% replace_filters = filter.data.dig(:replace_filters) || false %>
      <%= filter_link(key, filter, replace: replace_filters) %>
    <% end %>
  </div>
<% end %>
