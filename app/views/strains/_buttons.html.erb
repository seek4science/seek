<%= render :partial => "subscriptions/subscribe", :locals => {:object => item} %>

<%= item_actions_dropdown do %>
    <% if item.can_manage? %>
        <li><%= image_tag_for_key('manage', edit_strain_path, "Manage Strain", nil, 'Manage Strain') %></li>
    <% elsif item.can_edit? %>
        <li><%= image_tag_for_key('edit', edit_strain_path(item), "Edit Strain", nil, 'Edit Strain') %></li>
    <% end %>
    <%= delete_icon(item, current_user)-%>
<% end %>
