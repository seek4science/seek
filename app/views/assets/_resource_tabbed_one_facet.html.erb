<%= render :partial => "assets/resource_listing_tabbed_by_class",
           :locals => {:resource_hash => resource_hash, :display_immediately => true,
                       :active_tab => active_tab, :hide_view_all => true} %>

<script type="text/javascript">
    $j(document).ready(function () {
        $j('.related-items a[data-toggle="tab"]').on('click', function (e) {
            var type = $j(e.target).attr("data-model-name");
            hide_specified_facets();
            show_specified_facets_for_active_tab(type);
        });

        // Stay the same tab selection otherwise first tab
        var active_tab = $j('.related-items a[aria-controls="<%= active_tab %>"]') ||
                         $j('.related-items a[data-toggle="tab"]')[0];
        active_tab.click();
    });
</script>
