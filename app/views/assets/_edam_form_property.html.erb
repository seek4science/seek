<%
  return unless resource.supports_ontology_annotations?(property)
  with_edam= "#{property.to_s.singularize}_annotations"
  vocab = resource.send("ontology_annotation_vocab",property)
  return unless vocab
  values = resource.send("#{with_edam.singularize()}_labels")
  %>

<% if vocab %>
  <div class="form-group">
    <label><%= "EDAM #{property.capitalize()}" -%></label>
    <%= controlled_vocab_form_field(vocab, "#{resource.class.model_name.singular}[#{with_edam}]", values, 10 ) -%>
    <p class="help-block"><%= "The EDAM #{property.capitalize()}." -%></p>
  </div>
<% end %>
