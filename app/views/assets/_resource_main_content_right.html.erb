<% truncate_length_for_boxes = 22 -%>

<div class="main_content_right_box_wider">  
  <%= render :partial => "assets/resource_authors_box", :locals => { :title=>"Uploader and creators",:resource => resource, :truncate_to => truncate_length_for_boxes } if resource.respond_to?("creators") -%>
  <% if resource.class.taggable? -%>

  <%= item_tags_and_tag_entry -%>

  <% end -%>
  <%= render :partial => "assets/resource_attributions_box", :locals => { :resource => resource, :attributed_to => Authorization.authorize_collection("view", resource.attributions_objects, current_user, true), :truncate_to => truncate_length_for_boxes } -%>

 <% if resource.class.is_scalable? -%>
  <%= render :partial => "assets/resource_scales_box", :locals => { :resource => resource}-%>
 <% end -%>
</div>
