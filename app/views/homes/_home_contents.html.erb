<script type="text/javascript">
    $j(function()
    {
        $j('.homepanel_list').jScrollPane();
        $j('.jspDrag').hide();
        $j('.jspScrollable').mouseenter(function(){
            $j(this).find('.jspDrag').stop(true, true).fadeIn('slow');
        });
        $j('.jspScrollable').mouseleave(function(){
            $j(this).find('.jspDrag').stop(true, true).fadeOut('slow');
        });
    });
</script>


