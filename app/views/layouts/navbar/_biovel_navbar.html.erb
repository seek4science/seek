<nav class="navbar navbar-default" role="navigation" id="navbar">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-inner">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "http://www.biovel.eu/", :target => '_blank', :class=>"logo_link" do %>
          <%= image_tag("biovel-logo-official-small.png", :alt => "BioVeL", :title => "BioVeL", :style => "height: 50px") %>
      <% end %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="navbar-inner">
      <ul class="nav navbar-nav">
        <%= navigation_link 'Home', main_app.root_path, controller_name == 'homes' -%>
        <%= navigation_link t('data_file').pluralize, main_app.data_files_path, controller_name == 'data_files' -%>
        <%= navigation_link 'Workflows', main_app.workflows_path, controller_name == 'workflows' -%>
        <%= navigation_link 'Runs', taverna_player.runs_path, controller_name == 'runs' -%>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? && current_user.person && !current_user.person.new_record? %>
            <%= navigation_link current_user.person.name, main_app.person_path(current_user.person), false -%>
            <%= navigation_link('Admin', main_app.admin_path, false) if admin_logged_in? -%>
            <%= navigation_link 'Log out', main_app.logout_path, false -%>
        <% else %>
            <li><%= link_to 'Register', main_app.signup_path %></li>
            <li><%= link_to 'Log in', main_app.new_session_path(:return_to => request.original_url) %></li>
        <% end %>
      </ul>

    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
